{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": [ "es2015", "dom" ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "types": [
      "node"
    ],
    "skipLibCheck": true
  },
  "angularCompilerOptions": {
    "genDir": "client-src/aot",
    "skipMetadataEmit": true
  },
  "skipLibCheck": true,
  "files": [
    "client-src/app/app.module.ts",
    "client-src/app/admin/admin.module.ts",
    "client-src/app/file-manager/file-manager.module.ts",
    "client-src/app/org-manage/org-manage.module.ts",
    "client-src/app/sys-config/sys-config.module.ts"
  ],
  "exclude": [
    "node_modules",
    "client-src/app/polyfills.ts"
  ]
}
